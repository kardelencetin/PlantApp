<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="WelcomeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/welcome_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="OnboardText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/welcome_text_color</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/roboto</item>
    </style>

    <style name="PlantLover">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/desc_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GetStartedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:text">@string/get_started</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContinueButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:text">@string/continue_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TryForFreeButton">
        <item name="android:layout_width">378dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PrivacyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/privacy_text_color</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">@font/roboto</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>