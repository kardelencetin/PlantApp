<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#000000</color>
    <color name="gray">#808080</color>
    <color name="white">#FFFFFF</color>
    <color name="button_green">#4CAF50</color>
    <color name="button_dark_green">#012402</color>

    <style name="WelcomeText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="PlantLover">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/rubik_light</item>
    </style>

    <style name="DescriptionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GetStartedButton">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">Get Started</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ContinueButton">
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:text">Continue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TryForFreeButton">
    <item name="android:layout_width">365dp</item>
    <item name="android:layout_height">65dp</item>
    <item name="android:background">@drawable/button</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">16sp</item>
</style>

    <style name="PrivacyText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>