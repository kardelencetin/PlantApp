<com.google.android.material.card.MaterialCardView android:id="@+id/cardRoot"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    android:alpha="0.8"
    app:cardBackgroundColor="@color/card_option_bg"
    app:strokeColor="@color/card_option_stroke_bg"
    app:strokeWidth="1.2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="64dp"
        android:paddingStart="16dp"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/radioOption"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center_vertical"
            android:src="@drawable/selected_radio_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.777"/>

        <TextView
            android:id="@+id/optionBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/badge"
            android:visibility="gone"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/paywall_badge_green"
            android:paddingBottom="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/optionTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingTop="16dp"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toEndOf="@id/radioOption"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/optionBadge"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/optionSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/option_subtitle"
            android:textSize="12sp"
            android:fontFamily="@font/roboto"
            app:layout_constraintStart_toStartOf="@id/optionTitle"
            app:layout_constraintTop_toBottomOf="@id/optionTitle"
            app:layout_constraintEnd_toEndOf="@id/optionTitle"
            android:layout_marginTop="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
